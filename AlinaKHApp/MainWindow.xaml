<Window x:Class="AlinaKHApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доска объявлений - Главная" 
        Height="700" Width="1000"
        Background="White"
        FontFamily="Tw Cen MT"
        Icon="Resources/Иконка.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <Image Source="Resources/Лого.png" Width="32" Height="32" Margin="0,0,10,0"/>
            <TextBlock Text="Доска объявлений" 
                       FontSize="14" FontWeight="Bold" 
                       Foreground="#37474F" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBox x:Name="SearchTextBox" Width="200" Height="40" 
                     Padding="10" Margin="0,0,16,0"
                     Text="Поиск..."
                     KeyDown="SearchTextBox_KeyDown"/>

            <ComboBox x:Name="CityFilter" Width="120" Height="30" 
                      Margin="0,0,16,0"/>
            <ComboBox x:Name="CategoryFilter" Width="120" Height="30" 
                      Margin="0,0,16,0"/>
            <ComboBox x:Name="TypeFilter" Width="120" Height="30" 
                      Margin="0,0,16,0"/>
            <ComboBox x:Name="StatusFilter" Width="120" Height="30" 
                      Margin="0,0,16,0"/>

            <Button x:Name="SearchButton" Content="Найти" 
                    Width="80" Height="30"
                    Background="#FF9C1A" Foreground="White"/>

            <Button x:Name="CreateAdButton" 
                    Content="➕ Создать"
                    Width="100" Height="30" 
                    Margin="16,0,0,0"
                    Background="Green"
                    Foreground="White"
                    Click="CreateAdButton_Click"
                    Visibility="Visible"/>

            <Button x:Name="LoginButton" Content="Войти" 
                    Width="80" Height="30" Margin="16,0,0,0"
                    Background="#78909C" Foreground="White"
                    Click="LoginButton_Click"/>

            <Button x:Name="ProfitButton" 
                    Content="💰 Прибыль"
                    Width="120" Height="30" Margin="16,0,0,0"
                    Background="#4CAF50" Foreground="White"
                    Click="ProfitButton_Click"
                    Visibility="Visible"/>
        </StackPanel>

        <ListView x:Name="AdsListView" Grid.Row="2" Margin="0,0,0,16">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding AdTitle}"/>
                    <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding Price, StringFormat={}{0} руб.}"/>
                    <GridViewColumn Header="Город" Width="120" DisplayMemberBinding="{Binding CityName}"/>
                    <GridViewColumn Header="Категория" Width="120" DisplayMemberBinding="{Binding CategoryName}"/>
                    <GridViewColumn Header="Статус" Width="100" DisplayMemberBinding="{Binding StatusName}"/>
                    <GridViewColumn Header="Дата" Width="100" DisplayMemberBinding="{Binding AdPostDate, StringFormat={}{0:dd.MM.yyyy}}"/>
                    <GridViewColumn Header="Действия" Width="120">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="3" x:Name="StatusText" 
                   Foreground="#78909C" FontSize="10"/>
    </Grid>
</Window>