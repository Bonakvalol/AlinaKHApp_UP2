<Window x:Class="AlinaKHApp.AddAdvertisementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlinaKHApp"
        mc:Ignorable="d"
        Title="AddAdvertisementWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

     
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Text="Создание объявления" 
               FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,20"
               Foreground="#333333"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Заголовок:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TitleTextBox" Margin="5" Height="30"
             Background="#FFFFFF" BorderBrush="#CCCCCC"
             Foreground="#333333"
             ToolTip="Введите заголовок объявления (обязательно)"/>

      
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание:" Margin="5" 
               VerticalAlignment="Top" FontWeight="Bold"
               Foreground="#333333"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="DescriptionTextBox" Margin="5" Height="80" 
             Background="#FFFFFF" BorderBrush="#CCCCCC"
             Foreground="#333333"
             TextWrapping="Wrap" AcceptsReturn="True" 
             ToolTip="Введите подробное описание объявления"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="PriceTextBox" Margin="5" Height="30"
             Background="#FFFFFF" BorderBrush="#CCCCCC"
             Foreground="#333333"
             ToolTip="Введите цену в рублях (обязательно)" 
             PreviewTextInput="PriceTextBox_PreviewTextInput"/>

   
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Финальная цена:" Margin="5" 
               VerticalAlignment="Center"
               Foreground="#333333"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="FinalPriceTextBox" Margin="5" Height="30"
             Background="#FFFFFF" BorderBrush="#CCCCCC"
             Foreground="#333333"
             ToolTip="Введите финальную цену (если отличается)" 
             PreviewTextInput="FinalPriceTextBox_PreviewTextInput"/>

 
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Категория:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="CategoryComboBox" Margin="5" Height="30"
              Background="#FFFFFF" BorderBrush="#CCCCCC"
              Foreground="#333333"
              DisplayMemberPath="category_name" 
              ToolTip="Выберите категорию (обязательно)"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Тип:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="AdTypeComboBox" Margin="5" Height="30"
              Background="#FFFFFF" BorderBrush="#CCCCCC"
              Foreground="#333333"
              DisplayMemberPath="type_name" 
              ToolTip="Выберите тип объявления (обязательно)"/>

     
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Статус:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <ComboBox Grid.Row="7" Grid.Column="1" x:Name="StatusComboBox" Margin="5" Height="30"
              Background="#FFFFFF" BorderBrush="#CCCCCC"
              Foreground="#333333"
              DisplayMemberPath="status_name" 
              ToolTip="Выберите статус объявления (обязательно)"/>

      
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Город:*" Margin="5" 
               VerticalAlignment="Center" FontWeight="Bold"
               Foreground="#333333"/>
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="CityComboBox" Margin="5" Height="30"
              Background="#FFFFFF" BorderBrush="#CCCCCC"
              Foreground="#333333"
              DisplayMemberPath="city_name" 
              ToolTip="Выберите город (обязательно)"/>


        <TextBlock Grid.Row="9" Grid.Column="0" Text="Дата публикации:" Margin="5" 
               VerticalAlignment="Center"
               Foreground="#333333"/>
        <DatePicker Grid.Row="9" Grid.Column="1" x:Name="PostDatePicker" Margin="5" Height="30"
               Background="#FFFFFF" BorderBrush="#CCCCCC"
               Foreground="#333333"
               ToolTip="Дата создания объявления"/>

        <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" 
               Foreground="#666666" FontStyle="Italic" FontSize="11">
        * - обязательные для заполнения поля
        </TextBlock>

        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" 
                Margin="10" Width="120" Height="35" FontWeight="Bold"
                Background="#FFA500"
                BorderBrush="#CC8400"
                Foreground="#FFFFFF"/>

            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" 
                Margin="10" Width="120" Height="35"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                Foreground="#333333"/>
        </StackPanel>
    </Grid>
</Window>
