<Window x:Class="AlinaKHApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/Иконка.ico"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="Resources/Лого.png" Width="24" Height="24" Margin="0,0,10,0"/>
            <TextBlock Text="Вход в систему" 
                       FontSize="14" FontWeight="Bold" 
                       Foreground="#37474F" VerticalAlignment="Center"/>
        </StackPanel>

     
        <TextBlock Grid.Row="1" Text="Логин:" 
                   Foreground="#37474F" FontSize="12" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="1" Margin="0,20,0,5"
                 Padding="10" FontSize="12"/>

    
        <TextBlock Grid.Row="2" Text="Пароль:" 
                   Foreground="#37474F" FontSize="12" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Margin="0,20,0,10"
                     Padding="10" FontSize="12"/>

      

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="LoginButton" Content="Войти" 
            Width="100" Height="30" Margin="0,0,10,0"
            Background="#FF9C1A" Foreground="White"
            Click="LoginButton_Click"/>
            <Button x:Name="RegisterButton" Content="Регистрация" 
            Width="100" Height="30" Margin="0,0,10,0"
            Background="#78909C" Foreground="White"
            Click="RegisterButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" 
            Width="100" Height="30"
            Background="#78909C" Foreground="White"
            Click="CancelButton_Click"/>
        </StackPanel>

     
        <TextBlock Grid.Row="4" x:Name="StatusText" 
                   Foreground="#78909C" FontSize="10" HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>